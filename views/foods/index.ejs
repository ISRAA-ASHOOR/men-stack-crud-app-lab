<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Foods Index</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <!-- index.ejs -->

<body>
    <h1>All Foods</h1>
    <div class="index-header-div">
    </div>
    <ul>
      <% foods.forEach((food)=> { %>
      <li>
        <a class="food-cards" href="/foods/<%=food._id%>">
          <%= food.name %>
        </a>
      </li>
      <% }) %>
    </ul>
    <a class="add-foods" href="/foods/new">Add food</a>
  </body>
</html>